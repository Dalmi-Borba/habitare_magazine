<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/head', { pageTitle, metaDescription }) %>
  </head>
  <body id="topo">
    <%- include('partials/header') %>
    <main class="page">
      <% if (heroArticle) { %>
      <section class="hero-section">
        <div class="hero-section__image">
          <img src="<%= heroArticle.hero_image %>" alt="<%= heroArticle.title %>" />
          <div class="hero-section__overlay"></div>
        </div>
        <div class="hero-section__content">
          <span class="hero-section__badge">Matéria em Destaque</span>
          <h1 class="hero-section__title">
            <%= heroArticle.title.split(' ').slice(0, -1).join(' ') %> 
            <span class="highlight"><%= heroArticle.title.split(' ').slice(-1)[0] %></span>
          </h1>
          <p class="hero-section__description"><%= heroArticle.subtitle %></p>
          <div class="hero-section__actions">
            <a href="/artigos/<%= heroArticle.slug %>" class="button ghost">Ler Matéria Completa</a>
            <a href="/em-desenvolvimento" class="button ghost">Compartilhar</a>
          </div>
